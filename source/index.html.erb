---
layout: base
pageable: true
---
<% page_articles.each_with_index do |article, i| %>
  <%= partial("layouts/postcontent", :locals => { :post => article, :single => false }) %>
<% end %>

<% if paginate %>
	<%= partial("layouts/pagination", :locals => { :next_page => next_page, :prev_page => prev_page }) %>
<% end %>
